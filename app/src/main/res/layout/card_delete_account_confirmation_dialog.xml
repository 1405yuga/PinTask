<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/md_theme_errorContainer"
    app:cardCornerRadius="28dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_delete_outline_24"
            app:tint="@color/md_theme_error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/delete_account"
            android:textAlignment="center"
            android:textColor="@color/md_theme_onSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat"
            android:text="Once you delete this account, all the tasks registered will be deleted and there is no going back.\nPlease be certain."
            android:textAlignment="center"
            android:textColor="@color/md_theme_onSurface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/clickable_min_size"
                android:minWidth="@dimen/clickable_min_size"
                android:clickable="true"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="No"
                android:textColor="@color/md_theme_error"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/yesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/clickable_min_size"
                android:minWidth="@dimen/clickable_min_size"
                android:clickable="true"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/md_theme_error"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>